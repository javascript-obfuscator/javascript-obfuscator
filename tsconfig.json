{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "paths": {
      "app/*": [
        "src/*"
      ]
    }
  }
}